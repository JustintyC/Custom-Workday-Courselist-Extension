{
  "manifest_version": 3,
  "name": "Better UBC Workday Courselist",
  "description": "Reformats UBC Workday's course search list.",
  "version": "1.0.1",
  "icons": {
    "16": "icons/Images/icon16.png",
    "32": "icons/Images/icon32.png",
    "48": "icons/Images/icon48.png",
    "128": "icons/Images/icon128.png"
  },
  "permissions": [
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.myworkday.com/*"],
      "js": ["dist/content.bundle.js"]
    }
  ]
}