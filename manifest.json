{
  "manifest_version": 3,
  "name": "Better Workday Courselist",
  "description": "Reformats UBC Workday's course search list.",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "src/Images/hello_extensions.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.myworkday.com/*"],
      "js": ["dist/content.bundle.js"]
    }
  ]
}